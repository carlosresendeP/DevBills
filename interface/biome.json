{
	"$schema": "https://biomejs.dev/schemas/2.1.3/schema.json",

	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"indentWidth": 2,
		"lineWidth": 100
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"trailingCommas": "all",
			"semicolons": "always"
		}
	},

	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	}
}